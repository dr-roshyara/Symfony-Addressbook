{% extends 'base.html.twig' %}

{% block title %}AddressbookController! {% endblock %}
 

{% block body %}
     <!-- ===========================================================================-->
	 <nav class="bg-gray-100 pt-4 rounded-sm mx-auto border-b border-green-500">
	 	<div class=" flex justify-center mx-auto list-reset flex boder-b border-green-500 ">
		  <div class="-mb-px  border-b ">
		    <a class="mx-auto bg-white inline-block  border-l border-t border-r  border-green-500 rounded-t py-2 px-4 text-blue-dark font-semibold" 
		    href="/">
			Registration Form</a>
		  </div>
		  <div class="mr-1">
		    <a class="bg-white inline-block py-2 px-4 text-blue hover:text-blue-darker font-semibold" 
		    href="/addressbook">
		    Addressbook</a>
		  </div>
	
		</div>
	</nav>
<!-- ===========================================================================-->	
<div class=" shadow overflow-hidden sm:rounded-md bg-grey-100 min-h-screen flex flex-col">
    <div class="container max-w-lg mx-auto flex-1 flex flex-col items-center justify-center px-2">
        <div class="bg-gray-100  px-6 py-8 rounded shadow-md text-black w-full">
        	<h1 class="mb-8 text-xl text-center text-gray-800 font-medium">Registration From</h1>
	   <form action="{{ path('do-upload') }}" method="post" enctype="multipart/form-data">
		<!-- ========================================================================= -->
		<div class="mb-4">
			<label class="block text-gray-700 text-sm font-bold mb-2 px-1" for="firstName">
						First Name
			</label>
			<input 
                type="text"
                id="firstname" name="firstname"
                class="block border border-gray-100 w-full p-4 rounded mb-4 
				focus:ring-indigo-500 focus:border-green-500  block w-full shadow-sm sm:text-sm border-green-100   rounded-md"
                placeholder="First Name"  required/>
		 </div>	
		<!-- ===============================================-->
		<div class="mb-4">
			<label class="block text-gray-700 text-sm font-bold mb-2 px-1" for="lastName">
				Last Name
			</label>
			<input 
                type="text"
                id="lastname" name="lastname"
                class="block border border-grey-light w-full p-4 rounded mb-4 
				focus:ring-indigo-500 focus:border-green-500  block w-full shadow-sm sm:text-sm border-green-100   rounded-md"
                placeholder="Last Name" required />
			</div>
		<!-- ========================================================================= -->
		<div class="mb-4">
			<label class="block text-gray-700 text-sm font-bold mb-2 px-1" for="firstName">
				Phone Number
			</label>
			<input 
                type="text"
                id="phonenumber" name="phonenumber"
                class="block border border-gray-100 w-full p-4 rounded mb-4 
				focus:ring-indigo-500 focus:border-green-500  block w-full shadow-sm sm:text-sm border-green-100   rounded-md"
                placeholder="Phone number"  required/>
		 </div>	
				
		<!--=========================================================================-->
						<div class="grid grid-cols-12 gap-2 mb-4">
							<div class="col-span-7 sm:col-span-7 ">
							<label for="Zip" class="px-1 block text-sm font-medium text-gray-700">
							Street address 
							</label>
							<input 
							type="text" 
							id="street" name="street" 
							class="mt-2 p-4 focus:ring-indigo-500 focus:border-green-500  block w-full 
							shadow-sm sm:text-sm border-green-100   rounded-md"
							 placeholder="Street address " required
							/>
						 	<!--=========================================================================-->
							 </div>
							<div class="col-span-5 sm:col-span-5 ">
							<label for="hausnumber" 
							class="px-1 block text-sm md:font-medium text-gray-700 line-height">
							House number
							</label>
							<input type="text" 
							name="housenumber" id="housenumber" 
							autocomplete="postal-code" 
							class="mt-2 p-4 focus:ring-indigo-500 focus:border-green-500  block w-full 
							shadow-sm sm:text-sm border-green-100   rounded-md"
							 placeholder="Number" required
							/>
						  </div>
					  
						</div>
					<!--=========================================================================-->
					<div class="grid grid-cols-12 gap-2 mb-4">
						<div class="col-span-4 sm:col-span-4 ">
						<label for="postal_code" 
						class="px-1 block text-sm font-medium text-gray-700">Zip code</label>
						<input 
						type="text" 
						name="postal_code" id="postal_code" 
						autocomplete="postal-code" 
						class="mt-2 p-4 focus:ring-indigo-500 focus:border-green-500  
						block w-full shadow-sm sm:text-sm border-green-100   rounded-md"
						 placeholder="Postal code" 
						required />
					  </div>
						<div class="col-span-8 sm:col-span-8 ">
						<label for="Zip" class="px-1 block text-sm font-medium text-gray-700">
						City
						</label>
						<input 
							type="text" 
							id="city" name="city"  
							class="mt-2 p-4 focus:ring-indigo-500 focus:border-green-500  
							block w-full shadow-sm sm:text-sm border-green-100   rounded-md"
							 placeholder="City " 
							required 
						/>
					  </div>
					</div>
					 <!--=========================================================================-->
					<div class="mb-4">
					<label class="block text-gray-700 text-sm font-bold mb-2 px-1" 
					for="country">
						Country
					</label>
					<input 
                        type="text"
						id="country" name="country"                        
                       class="block border border-grey-light w-full p-4 rounded mb-4 
						focus:ring-indigo-500 focus:border-green-500  
						block w-full shadow-sm sm:text-sm border-green-100   rounded-md"
                        placeholder="Country " required />
					</div>
				   	<!--=========================================================================-->
					
						   <div class="mb-4">
							<label class="block text-gray-700 text-sm font-bold mb-2" for="Date">
								Birthday 
							</label>
							<input
							 type="date" placeholder=" Birthday"
							  id="birthday" name="birthday"	
							  class="shadow appearance-none border rounded w-full  p-4 mb-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
							    required />
						</div>
					<!--=========================================================================-->
			  
                    <div class="mb-4">
						<label class="block text-gray-700 text-sm font-bold mb-2 px-1" for="email">
							Email
						</label><input 
							type="text"
							id="email" name="email"
							class="block border border-grey-light w-full p-4 rounded mb-4 
							focus:ring-indigo-500 focus:border-green-500  
							block w-full shadow-sm sm:text-sm border-green-100   rounded-md"
							required
							placeholder="Email" />

					</div> 
					<!--=========================================================================-->		 			
					 	
	   	<!-- ========================================================================= -->
			 <div class="mb-4 border border-gray-300 px-1 py-2">
				<label class="block text-gray-700 text-sm font-bold mb-2 px-1" for="email">
							Picture Upload
				</label>
				<input type="hidden" name="token" value="{{ csrf_token('upload') }}" />
		        <div>
		            <!-- <label for="myfile">File to upload:</label> -->
		            <input 
		            type="file" 
		            name="myfile" id="myfile" 
		            class="mb-2 border border-green-50 w-full"
		              >
		        </div>

	        </div>
       <!-- ========================================================================= -->
		  <button type="submit"
		   class="w-full text-center py-4 rounded bg-green-400 
						text-white hover:bg-green-dark focus:outline-none my-1"
						>Add to Address book</button> 

		<!-- ========================================================================= -->
		 
  	</form>

</div>
</div>
{% endblock %}